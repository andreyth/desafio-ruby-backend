<div class="container">
  <br>
  <div class="text-center">
    <h3>Open Cnab File</h3>
    
    <%= form_for "", :url => { controller: "financial_transactions", action: "create", method: "post" }, html: { multipart: true } do |form| %>
      <div class="form-group">
        <%= form.file_field :file, class: "btn btn-secondary" %>
      </div>

      <div class="form-group">
        <%= form.submit "Enviar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>